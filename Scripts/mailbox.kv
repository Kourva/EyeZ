#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Mailbox menu stuff
<Mailbox>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen layout
    FloatLayout:

        # Action bar layout
        # You can add this if you want colored action bar.
        # Button:
        #     size_hint: 1, None
        #     height: "100dp"
        #     pos_hint: {"top": 1}
        #     disabled: True 
        #     background_normal: ''
        #     background_disabled_normal: ''
        #     background_color: "000000"

        # Action bar label
        Label:
            size_hint: 0.3 , None
            height: "30dp"
            pos_hint: {"center_x": 0.5, "top":0.97}
            halign: "center"
            markup: True 
            font_size: "20sp"
            font_name: root.font
            text: "Inbox"
            color: "009AC2"

        # Inbox count label
        # This will count your messages
        Label:
            id: Inboxmsg
            size_hint: 0.6 , None
            height: "35dp"
            pos_hint: {"center_x": 0.5, "center_y":0.8}
            halign: "center"
            markup: True 
            font_name: "RobotoMono-Regular"
            text: "Total messages: [color=00ff00]_[/color]"
            color: "ffffff"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .1
                Line:
                    width: 1.05
                    rounded_rectangle:
                        ( \
                        self.x, self.y, self.width, self.height, \
                        10, 10, 10, 10, \
                        self.height \
                        )

        # Back button
        # This will navigate you to Mail menu
        ImageButton:
            pos_hint: {"center_x": 0.125, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/back.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'MailMenu'

        # Refresh button
        # This will refresh the inbox for new messages
        ImageButton:
            pos_hint: {"center_x": .875, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/refresh.png"
            on_press:
                root.refresh()

        # Output box for Messages
        ScrollView:
            size_hint: (0.9, 0.6)
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            do_scroll_x: False
            do_scroll_y: True
            always_overscroll: True
            bar_color: '#00D194'
            canvas:
                Color:
                    rgba: 1, 1, 1, 0.05
                Line:
                    width: 1.55
                    rounded_rectangle:
                        ( \
                        self.x, self.y, self.width, self.height, \
                        10, 10, 10, 10, \
                        self.height \
                        )
            # All mssages
            Label:
                id: messages
                markup: True
                font_name: "RobotoMono-Regular"
                text: "aa\n\n" * 20 
                size_hint_y: None
                color: "ffffff"
                height: self.texture_size[1]
                text_size: self.width, None
                pos_hint: {'center_y': 0.5}

# End Of Script