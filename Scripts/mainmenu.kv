#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# Main menu stuff
<MainMenu>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Screen layout
    FloatLayout:

        # Action bar layout
        # You can add this if you want colored action bar. 
        # Button:
        #     size_hint: 1, None
        #     height: "90dp"
        #     pos_hint: {"top": 1}
        #     disabled: True 
        #     background_normal: ''
        #     background_disabled_normal: ''
        #     background_color: "111111"
        
        # Action bar label
        Label:
            size_hint: 0.3 , None
            height: "30dp"
            pos_hint: {"center_x": 0.5, "top":0.97}
            halign: "center"
            markup: True 
            font_size: "20sp"
            font_name: root.font
            text: "EyeZ"
            color: "00ff00"

        # IP address label
        # IP address will be shown here
        Label:
            id: IpAddr
            size_hint: 0.9 , None
            height: "35dp"
            pos_hint: {"center_x": 0.5, "center_y":0.8}
            halign: "center"
            markup: True 
            font_name: "RobotoMono-Regular"
            text: "xXx.xXx.xXx.xXx"
            color: "FF2BE5"
            canvas.before:
                Color:
                    rgba: 1, 1, 1, .1
                Line:
                    width: 1.05
                    rounded_rectangle:
                        ( \
                        self.x, self.y, self.width, self.height, \
                        10, 10, 10, 10, \
                        self.height \
                        )

        # Close button
        # This will close the app
        ImageButton:
            pos_hint: {"center_x": 0.125, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/close.png"
            on_press:
                root.exit_App()

        # Ip button
        # This will get your IP address
        ImageButton:
            pos_hint: {"center_x": 0.875, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/ip.png"
            on_press:
                root.get_ip()
           
        # Mail button
        # This will navigate you to mail menu
        ImageButton:
            pos_hint: {"center_x": .75, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/mail.png"
            on_press:
                root.check_mail()
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'MailMenu'

        # URL button
        # This will navigate you to URL menu 
        ImageButton:
            pos_hint: {"center_x": .25, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/url.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'URLMenu'

        # Skull image
        Image:
            pos_hint: {"center_x": .5, "center_y": 0.5}
            size_hint: 0.5, 0.5
            source: "Assets/skull.png"
            
        # Bottom Label
        Label:
            size_hint: 0.9 , None
            height: "35dp"
            pos_hint: {"center_x": 0.5, "bottom":1}
            halign: "center"
            markup: True 
            font_size: 20
            bold: True
            text: "Social Engineering Toolkit"
            color: "FF2BE5"

# End Of Script