#: import FadeTransition kivy.uix.screenmanager.FadeTransition
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

# URL menu stuff
<URLMenu>

    # App background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # Float layout
    FloatLayout:

        # Action bar layout
        # You can add this if you want colored action bar. 
        # Button:
        #     size_hint: 1, None
        #     height: "90dp"
        #     pos_hint: {"top": 1}
        #     disabled: True 
        #     background_normal: ''
        #     background_disabled_normal: ''
        #     background_color: "111111"

        
        # Action bar label
        # Label:
        #     size_hint: 0.3 , None
        #     height: "30dp"
        #     pos_hint: {"center_x": 0.5, "top":0.97}
        #     halign: "center"
        #     markup: True 
        #     font_size: "20sp"
        #     font_name: root.font
        #     text: "EyeZ"
        #     color: "ff0000"

        # Back button
        # This will navigate you to Main menu
        ImageButton:
            pos_hint: {"center_x": 0.125, "top": 1}
            size_hint: 0.1, 0.1
            source: "Assets/back2.png"
            on_press:
                root.manager.transition = FadeTransition(duration=0.05)
                root.manager.current = 'MainMenu'
        
        # Grid layout
        GridLayout:
            cols: 1
            row_force_default: True
            row_default_height: "35dp"
            size_hint: (0.9, 0.7)
            halign: "left"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            background_color: "00000000"

            # Input label for URL
            Label:
                size_hint: 0.3 , None
                height: "30dp"
                pos_hint: {"center_x": 0.5, "top":0.97}
                halign: "center"
                markup: True 
                font_name: "RobotoMono-Regular"
                text: "Enter URL"
                color: "ff0000"

            # Input box for URL
            TextInput:
                id: URL
                size_hint: (1, None)
                height: "30dp"
                multiline: False
                halign: "center"
                keyboard_suggestions: True
                foreground_color: "009AC2"
                hint_text: "Enter Long URL"
                text: ""
                hint_text_color: "aa0000"
                font_name: "RobotoMono-Regular"
                background_color: "#00000000"
                background_selected: '009AC255'
                background_normal: ''
                canvas.before:
                    Line:
                        width: 1.05
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            10, 10, 10, 10, \
                            self.height \
                            )

            # New line - Empty label
            Label:
                text:""

            # Short it button
            # This will short the given URl
            Button:
                markup: True
                font_name: root.font
                text: "[b]Short IT[/b]"
                color: "ffffff"
                background_normal: ''
                background_color: "aa000088"
                canvas:
                    Color:
                        rgba: .186, .210, .162, 0.7
                    Line:
                        width: 1.55
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            25, 25, 3, 3, \
                            self.height \
                            )
                on_press:
                    root.short_it()

            # New line - Empty label
            Label:
                text:""

            # First link label
            Label:
                id: Link1
                size_hint: 0.9 , None
                height: "35dp"
                pos_hint: {"center_x": 0.5, "center_y":0.1}
                halign: "center"
                markup: True 
                font_name: "RobotoMono-Regular"
                text: "[color=aaaaaa]XxX.XxX.XxX[/color]"
                bold: True
                color: "009AC2"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .1
                    Line:
                        width: 1.05
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            10, 10, 10, 10, \
                            self.height \
                            )
                on_ref_press:
                    root.open_url(1)

            # New line - Empty label
            Label:
                text:""

            # Second link label
            Label:
                id: Link2
                size_hint: 0.9 , None
                height: "35dp"
                pos_hint: {"center_x": 0.5, "center_y":0.1}
                halign: "center"
