                text: "[color=aaaaaa]XxX.XxX.XxX[/color]"
                bold: True
                color: "009AC2"
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, .1
                    Line:
                        width: 1.05
                        rounded_rectangle:
                            ( \
                            self.x, self.y, self.width, self.height, \
                            10, 10, 10, 10, \
                            self.height \
                            )
                on_ref_press:
                    root.open_url(2)

            # New line - Empty label
            Label:
                text:""

            # Third link label
            Label:
                id: Link3
                size_hint: 0.9 , None
                height: "35dp"
                pos_hint: {"center_x": 0.5, "center_y":0.1}
                halign: "center"
                markup: True 
